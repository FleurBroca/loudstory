<div class="wrapper-login">
  <div class="container double-page center-block">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6" id="invite-team-banner">
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
        <div id="header-signup-member">
          <h2><%= t '.title' %></h2>
          <h4><%= t '.header' %></h4>
        </div>
        <div id="invite-team-text">
          <%= form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, class: 'form-inline'}) do |f| %>
            <%= devise_error_messages! %>

          <% resource.class.invite_key_fields.each do |field| -%>
            <%= f.text_field :email, autofocus: true, placeholder: 'Email', class: "signin-label", class: "form-control" %></p>
          <% end -%>
            <div class="form-group">
              <%= f.submit "Send", class: "btn btn-lg btn-block btn-signin" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>