<div class="container">
  <div class="row single-page">
    <div class="col-sm-6 text-center oops">
      <h1>Oops</h1>
      <h4>An error as occurred during the registration process.</h4>
      <p>Please go back to the previous page and make sure you entered a proper email address, a username and a password of minimum 4 letters or digits.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-inline'}) do |f| %>
        <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "signin-label", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :first_name, autofocus: true, placeholder: 'Username', class: "signin-label", class: "form-control" %>
      </div>

      <div class="form-group">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "signin-label", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Start for free", class: "btn btn-lg btn-block btn-signin" %>
      </div>
      <% end %>

    </div>
  </div>
</div>