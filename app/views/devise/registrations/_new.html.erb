      <div class="page-header" id="header-signup">
        <h1>Sign up</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-control signin-label" %>
        </div>

        <div class="field form-group">
          <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: "form-control signin-label" %>
        </div>

        <div class="field form-group">
          <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name', class: "form-control signin-label" %>
        </div>

        <div class="field form-group">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control signin-label" %>
        </div>

        <div class="actions">
          <%= f.submit "Get started", class: 'btn btn-lg btn-block btn-signin' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
