<div class="wrapper-logout">
  <div class="container">
    <div class="row single-page">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-4 col-md-offset-3 col-md-8 signin-form">


          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline'}) do |f| %>
            <div class="field form-group">
              <%= f.email_field :email, required: true, autofocus: true, placeholder: 'Email', class: "signin-label", class: "form-control" %>
            </div>

            <div class="field form-group">
             <%= f.password_field :password, required: true, autocomplete: "off", placeholder: 'Password', class: "signin-label", class: "form-control" %>
            </div>

  <!--           <% if devise_mapping.rememberable? -%>
              <div class="field form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "signin-label, forgot-color" %>
              </div>
            <% end -%> -->

            <div class="form-group" class="sign-button">
              <%= f.submit "Log in", class: 'btn btn-lg btn-block btn-signin' %>
            </div>
          <% end %>
      </div>
      <br/>
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6 col-md-offset-7 col-md-2" id="forgot-password">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
