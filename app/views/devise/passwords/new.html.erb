<div class="container center-block">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="page-header" class="header-signup-team">
        <h3 class="size-30"><%= t '.title' %></h3>
      </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.email_field :email, required: true, autofocus: true, placeholder: 'Your email', class: "form-control signin-label" %>
        </div>

        <div class="actions">
          <%= f.submit "Send rescue!", class: 'btn btn-lg btn-block btn-signup-team' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
