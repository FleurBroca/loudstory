<div class="container text-center">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="page-header">
        <h1 class="color-red"><%= t '.title' %></h1>
      </div>
      <div class="img-fit">
        <%= image_tag current_user.picture(:profile), class:"pic-dashboard" %>
      </div>
      <div id="identity">
        <h3><%= current_user.first_name%>  <%= current_user.last_name%></h3>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-2">

      <% if @user.exercises.size > 0 %>
        <h1><%= t '.header1' %></h1>
        <% current_track = nil %>

        <% @user.exercises.each do |exercise| %>
          <% if current_track != exercise.track %>
            <h3><%= exercise.track.title %></h3>
            <%=
              current_track = exercise.track
              nb_exercises = @user.exercises.select{|ex| ex.track_id == exercise.track.id}.size
              nb_total_exercises = exercise.track.exercises.count
              render "progressbar", percentage: nb_exercises.to_f / nb_total_exercises.to_f * 100.0
            %>
          <% end %>

          <h4><%= exercise.title %></h4>
          <% @user.sessions.where(exercise_id: exercise.id).each do |session| %>
            <p><%= "Version of #{l session.updated_at, format: :long}" %></p>
            <%= link_to "View", edit_exercise_session_path(exercise, session), class:"btn btn-sm btn-primary" %>
            <%= link_to "Delete", exercise_session_path(exercise, session), method: :delete,
                data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-danger" %>
          <% end %>
          <br>
          <br>

        <% end %>
        <div class="col-xs-6 col-xs-offset-2">
            <div class="actions">
              <%= link_to "Back to exercises", track_path(current_track), class:"btn btn-lg btn-exo" %>
              <%= link_to "Back to tracks", tracks_path, class:"btn btn-lg btn-exo" %>
            </div>
          </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-2">
      <h1><%= t '.header2' %></h1>
    </div>
    <div class="col-xs-7 col-xs-offset-2">
      <h3><%= t '.subheader2' %></h3>
    </div>
    <div class="col-xs-7 col-xs-offset-2">
      <%= link_to "Invite new member", new_user_invitation_path, class:"btn btn-lg btn-exo" %>
    </div>
  </div>
</div>
