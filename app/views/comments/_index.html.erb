<% answer.comments.each do |comment| %>
  <tr>
    <p id="comment-user"><td><%= comment.user.name %> said: </td></p>
    <td id="comment-text"><%= comment.content %></td>
    <td>
     <%= link_to 'X', answer_comment_path(answer, comment), method: :delete, class:"btn btn-sm btn-danger-small" %>
    </td>
  </tr>
<% end %>