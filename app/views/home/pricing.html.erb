<div class="wrapper-login">
  <div class="container pricing-page">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6 page-header" id="pricing-text">
        <h1 class="text-center"><%= t '.text_pricing_title' %></h1>
        <p class="text-center"><%= t '.text_pricing_subtitle' %></p>
        <h5 class="text-center"><%= t '.text_free_trial' %></h5>
        <div class="col-md-8 col-md-offset-2">
          <ul>
            <li><h2><%= t '.text_pricing_content1' %></h2></li>
            <li><h2><%= t '.text_pricing_content2' %></h2></li>
            <li><h2><%= t '.text_pricing_content3' %></h2></li>
            <li><h2><%= t '.text_pricing_content4' %></h2></li>
          </ul>
          <div class="spacer-1em"></div>
          <h3><%= t '.garantee_title' %></h3>
          <h5><%= t '.garantee_text' %></h5>
        </div>
        <div class="col-md-6 col-md-offset-3 text-center">
          <% if user_signed_in? %>
            <%= form_tag('/charge', method: :patch) do %>
              <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_W3z4DqlNCH1uX4s8uPJe8uQq"
                data-image="/square-image.png"
                data-name="Demo Site"
                data-description="2 widgets ($20.00)"
                data-amount="2000">
              </script>
            <% end %>
          <% else %>
           <div class="form-group">
            <%= link_to "Start Free Trial", root_path, class:"btn btn-sm btn-danger" %>
           </div>
          <% end %>
          <div class="text-center">
            <a class="scroll-link" href="#suit5" style="outline:none;">
            <i class="fa fa-chevron-down", style="color:red;"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6" id="pricing-tracks-title">
        <h1 class="text-center"><%= t '.text_tracks_title' %></h1>
        <p class="text-center"><%= t '.text_tracks_subtitle' %></p>
        <div class="col-md-8 col-md-offset-2" id="pricing-tracks-list">
          <ul class="list-unstyled">
            <li><h2><%= t '.text_tracks_content1' %></h2></li>
            <li><p><%= t '.text_tracks_description1' %></p></li>
          </ul>
          <ul class="list-unstyled">
            <li><h2><%= t '.text_tracks_content2' %></h2></li>
            <li><p><%= t '.text_tracks_description2' %></p></li>
          </ul>
          <ul class="list-unstyled">
            <li><h2><%= t '.text_tracks_content3' %></h2></li>
            <li><p><%= t '.text_tracks_description3' %></p></li>
          </ul>
          <ul class="list-unstyled">
            <li><h2><%= t '.text_tracks_content4' %></h2></li>
            <li><p><%= t '.text_tracks_description4' %></p></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="row" id="suit5">
      <div class="col-xs-12 col-sm-12 col-md-6" id="team-pricing-text">
        <h1 class="text-center"><%= t '.team_pricing_title' %></h1>
        <p class="text-center"><%= t '.team_pricing_subtitle1' %></p>
        <p class="text-center"><%= t '.team_pricing_subtitle2' %></p>
        <div class="col-md-8 col-md-offset-2">
            <ul>
            <li><h2><%= t '.team_pricing_content1' %></h2></li>
            <li><h2><%= t '.team_pricing_content2' %></h2></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

