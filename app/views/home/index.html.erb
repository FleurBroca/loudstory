<% if user_signed_in? %>
<div class="wrapper-login">
  <div class="container double-page">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6" id="all-tracks-banner">
        <h1><%= t '.title_logged_in' %></h1>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6 page-header" id="all-tracks-text">
        <div class="page-header">
          <h4><%= t '.header_logged_in' %></h4>
          <p class="pull-right"><%= t '.header_logged_in_name' %></p>

        </div>
        <%= flash_messages %>
        <div class="col-xs-12 col-sm-12 col-md-12" id="all-tracks-text">
          <% @tracks.each do |track| %>
            <% if track.position == 1 %>
              <h3><%= link_to track.title, track %></h3>
              <h5><%= track.description %></h5>
              <div class="spacer-30 padding-left-20">
                <ul class="list-unstyled list-inline">
                  <li><%= link_to "Learn", posts_path, class: "btn btn-sm btn-blue" %></li>
                  <li><%= link_to "Create", track, class: "btn btn-sm btn-danger" %></li>
                </ul>
              </div>
            <% else %>
              <h3><%= link_to track.title, track %></h3>
              <h5><%= track.description %></h5>
              <div class="spacer-30 padding-left-20">
                <ul class="list-unstyled list-inline">
                  <li><%= link_to "Learn", votes_tracks_path, class: "btn btn-sm btn-blue" %></li>
                  <li><%= link_to "Create", votes_tracks_path, class: "btn btn-sm btn-danger" %></li>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% else %>
  <div class="wrapper-logout">
    <div class="container">
      <div class="row single-page">
        <div class="col-sm-12 text-center text-title ">
          <h1><%= t '.title_signed_out' %></h1>
          <h2><%= t '.subtitle' %></h2>
        </div>

        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6 col-md-offset-1 col-md-10" id="homebanner">
          <div class="row">
            <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-10">
              <%= flash_messages %>
              <%= render "devise/registrations/new" %>
              <br>
              <p class="transbox"><%= t '.textsearchbar'%></p>
            </div>
          </div>
          <div class="text-center">
            <a class="scroll-link" href="#suit" style="outline:none;">
              <i class="fa fa-chevron-down", style="color:red;"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
