<% if user_signed_in? %>
<div class="wrapper-login">
  <div class="container double-page">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6" id="all-tracks-banner">
        <h1><%= t '.title_logged_in' %></h1>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6 page-header" id="all-tracks-text">
        <div class="page-header">
          <h4><%= t '.header_logged_in' %></h4>
          <p class="pull-right"><%= t '.header_logged_in_name' %></p>

        </div>
        <div class="col-xs-12 col-sm-12 col-md-12" id="all-tracks-text">
          <% @tracks.each do |track| %>
            <h3><%= link_to track.title, track %></h3>
            <h5><%= track.description %></h5>
            <div class="spacer-30 padding-left-20">
              <ul class="list-unstyled list-inline">
                <li><%= link_to "Start", track, class: "btn btn-sm btn-danger" %></li>
                <li><%= link_to "Learn more", posts_path, class: "btn btn-sm btn-blue" %></li>
              </ul>
            </div>

            <h3>PR Story</h3>
            <h5>Coming soon...</h5>
            <h3>Landing Page Story</h3>
            <h5>Coming soon...</h5>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% else %>
<div class="wrapper-logout">
  <div class="container">
    <div class="row single-page">
      <div class="col-sm-12 text-center text-title ">
        <h1><%= t '.title_signed_out' %></h1>
        <h2><%= t '.subtitle' %></h2>
      </div>

      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6 col-md-offset-1 col-md-10" id="homebanner">
        <div class="row" id="underbanner">
          <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-10">
            <%= flash_messages %>
            <%= render "devise/registrations/new" %>
            <br>
            <p class="transbox"><%= t '.textsearchbar'%></p>
          </div>
          <div class="text-center">
            <a href="/#suit" class="scroll-link">
              <i class="fa fa-chevron-down", style="color:red;"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="row" id="suit">
      <div class="col-xs-8 col-xs-offset-2 suit-quote">
        <h2><%= t '.quote1' %></h2>
        <ul class="list-inline pull-right">
          <li><%= image_tag "elisa-schreiber.jpg", class: "quote-img" %></li>
          <li><p><%= t '.quote1_name' %></p></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row suit-testimonials">
      <div class="col-md-12 line-title text-center">
        <h3>
          <span><%= t '.testimonials_title' %></span>
        </h3>
      </div>
      <div class="col-md-6">
        <div class="col-md-6">
          <%= image_tag "kazoart-square.png", class: "testimonials-img" %>
        </div>
        <div class="col-md-6">
          <h2><%= t '.kazoart_testimonials_title' %></h2>
          <p><%= t '.kazoart_testimonials_content' %></p>
          <h5 class="very-tiny-text"><%= t '.kazoart_testimonials_definition' %></h5>
        </div>
      </div>
      <div class="col-md-6">
        <div class="col-md-6">
          <%= image_tag "backpack-square.png", class: "testimonials-img" %>
        </div>
        <div class="col-md-6">
          <h2><%= t '.backpack_testimonials_title' %></h2>
          <p><%= t '.backpack_testimonials_content' %></p>
          <h5 class="very-tiny-text"><%= t '.backpack_testimonials_definition' %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row suit-features">
      <div class="col-md-12 line-title text-center">
        <h3>
          <span><%= t '.process_title' %></span>
        </h3>
      </div>
      <div class="col-md-3 col-sm-6">
        <%= image_tag "learn-backpack.svg", class: "features-img text-center" %>
        <h2><%= t '.learn_title' %></h2>
        <p><%= t '.learn_content' %></p>
      </div>
      <div class="col-md-3 col-sm-6">
        <%= image_tag "write-notes.svg", class: "features-img" %>
        <h2><%= t '.create_title' %></h2>
        <p><%= t '.create_content' %></p>
      </div>
      <div class="col-md-3 col-sm-6">
        <%= image_tag "askpro-light.svg", class: "features-img" %>
        <h2><%= t '.ask_a_pro_title' %></h2>
        <p><%= t '.ask_a_pro_content' %></p>
      </div>
      <div class="col-md-3 col-sm-6">
        <%= image_tag "spread-world.svg", class: "features-img" %>
        <h2><%= t '.share_title' %></h2>
        <p><%= t '.share_content' %></p>
      </div>
  </div>

  <div class="container">
    <div class="row" id="suit">
      <div class="col-xs-8 col-xs-offset-2 suit-quote">
        <h2><%= t '.quote2' %></h2>
        <ul class="list-inline pull-right">
          <li><%= image_tag "ben-horowitz.jpg", class: "quote-img" %></li>
          <li><p><%= t '.quote2_name' %></p></li>
        </ul>
      </div>
    </div>
  </div>

  </div>
    <div class="container">
    <div class="row">
      <div class="col-md-12 line-title text-center">
        <h3>
          <span><%= t '.mission_statement_title' %></span>
        </h3>
      </div>
      <div class="col-xs-8 col-xs-offset-2 suit-mission">
        <p><%= t '.mission_statement_content' %></p>
      </div>
    </div>
  </div>

  <div class="text-center suit-pricing">
    <%= link_to "Price Tag", pricing_path, class: "btn btn-blue-big" %>
  </div>

  <div class="container">
    <div class="row" id="suit">
      <div class="col-xs-6 col-xs-offset-3 suit-contact">
        <ul class="list-inline text-center">
          <li><%= image_tag "letter.svg", class: "features-img-small" %></li>
          <li><%= t '.contact' %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<% end %>