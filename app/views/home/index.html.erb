          <div class="row">
            <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-10">
              <%= flash_messages %>
              <%= render "devise/registrations/new" %>
              <br>
<!--               <p class="transbox"><%= t '.textsearchbar'%></p>
 -->            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
