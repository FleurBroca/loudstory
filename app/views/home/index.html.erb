<div class="wrapper" id="header">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12">
        <h1>Inspire people with storytelling.</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 offset-4">
        <%= image_tag "homebanner.png", id: "homebanner" %>
      </div>
      <div class="col-xs-4">
        <% if user_signed_in? %>
        <%= render "devise/sessions/new" %>
        <% else %>
        <%= render "devise/sessions/new" %>
        <%= render "devise/registrations/new" %>
        <% end %>
      </div>
    </div>
  </div>
</div>