<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 page-header">
      <h1><%= t '.title_for', title: @track.title %></h1>
      <h4><%= t '.header' %></h4>
    </div>
    <div class="col-xs-6 col-xs-offset-3 page-body">
      <p><%= t '.warmup' %></p>
      <% @exercises.each do |exercise| %>
        <p><%= exercise.title %></p>

        <%= link_to "New version", new_exercise_session_path(exercise), class:"btn btn-sm btn-primary" %>

        <% if @user.exercises.count > 0 %>
          <% session = exercise.user_sessions(current_user).last %>
          <% if session %>
           <%= link_to "Update last version", edit_exercise_session_path(exercise, session), class:"btn btn-sm btn-primary" %>
          <% end %>
        <% end %>

      <% end %> <!-- each -->
    </div>
    <div class="col-xs-6 col-xs-offset-3 page-btn">
      <div class="actions">
        <%= link_to "Go to my dashboard", dashboards_index_path, class: "btn btn-lg btn-exo" %>
      </div>
    </div>
  </div>
</div>

