
      <div id="invite-team-text">
          <h2><%= t '.title' %></h2>
          <h4><%= t '.header' %></h4>
      </div>
      <div class="spacer-1em"></div>
      <%= flash_messages %>
      <div class="col-xs-6 col-sm-6 col-md-6">
        <%= form_for(@team) do |f| %>
          <div class="field form-group">
            <%= f.text_field :name, required: true, autofocus: true, placeholder: 'Name', class: "signin-label", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Start", class: "btn btn-lg btn-block btn-signin" %>
          </div>
        <% end %>
      </div>
      <div class="spacer-1em"></div>
      <div class="col-xs-6 col-sm-6 col-md-8">
        <%= link_to "Back", dashboards_index_path, class: "btn btn-sm btn-blue" %>
      </div>

