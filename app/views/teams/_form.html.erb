<div class="container center-block">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="page-header" id="header-signup-team">
        <h1>Sign up a new team</h1>
      </div>

      <%= form_for(@team) do |f| %>

        <div class="field form-group">
          <%= f.text_field :name, autofocus: true, placeholder: 'My team', class: "form-control signin-label" %>
        </div>

        <div class="actions">
          <%= f.submit "Submit", class: 'btn btn-lg btn-block btn-signup-team' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
