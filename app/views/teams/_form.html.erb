
    <div class="col-xs-4 col-xs-offset-4">
      <div class="page-header" class="header-signup-team">
        <h2><%= t '.title' %></h2>
      </div>

      <%= form_for(@team) do |f| %>

        <div class="field form-group">
          <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: "form-control signin-label" %>
        </div>

        <div class="actions">
          <%= f.submit "Start", class: 'btn btn-lg btn-block btn-signup-team' %>
        </div>
      <% end %>
    </div>

