<div class="container center-block single-page">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="page-header" id="header-onboarding">
        <h3>Create your team</h3>
        <h5>Working with team members can help bring a new perspective or fine-tune the wording of your copies.</h5>
        <p>If you prefer, you can skip this step and add members later from your storyboard.</p>
      </div>

      <%= form_for(@team, :url => wizard_path, :method => :put, html: {class: 'form-inline'}) do |f| %>

        <div class="form-group">

         <%= text_field_tag :email, "",autofocus: true, placeholder: 'Email', class: "signin-label form-control" %>
        </div>
        <div class="form-group">
         <%= f.submit 'Send', class: 'btn btn-lg btn-block btn-signin' %>
        </div>
      <% end %>
      <div class="spacer-1em"></div>
      <%= link_to 'Skip', next_wizard_path %>
    </div>
  </div>
</div>