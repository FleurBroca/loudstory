<div class="container center-block single-page">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="page-header" class="header-onboarding">
        <h1>Welcome!</h1>
        <h3>You can now name your first project.</h3>
        <h3>LoudStory helps you create multiple communications strategies and tools based on storytelling for your different projects - whether for your startup or just an idea you want to work on.</h3>
      </div>

    <div class="col-xs-10 col-md-6">

      <%= form_for(@team, :url => wizard_path, :method => :put, html: {class: 'form-inline'}) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: 'Project name', class: "signin-label", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Next", class: 'btn btn-lg btn-block btn-signin' %>
        </div>
      <% end %>
    </div>
  </div>
</div>