<div class="container center-block single-page">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="page-header" id="header-onboarding">
        <h1>Welcome</h1>
        <h4>Name your first project</h4>
        <p>LoudStory allows you to work on multiple projects, startups or ideas. Enter the official name of your company or a code name that fits your current energy.</p>
      </div>

    <div class="col-xs-10 col-md-6">

      <%= form_for(@team, :url => wizard_path, :method => :put, html: {class: 'form-inline'}) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: 'Project name', class: "signin-label", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Next", class: 'btn btn-lg btn-block btn-signin' %>
        </div>
      <% end %>
    </div>
  </div>
</div>