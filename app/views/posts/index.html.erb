<div class="container">
  <div class="row single-page">
    <div class="col-sm-12 text-center text-title-academy ">
      <h1><%= t '.title' %></h1>
      <h3><%= t '.subtitle' %></h3>

      <div class="col-md-8 col-md-offset-2">
        <ul class="list-unstyled list-post" id="panel-heading-post">

           <% @posts.each do |post| %>
            <li class="panel panel-default panel-sd-post"><%= link_to post.title , [post, post.lessons.first] %></li>
           <% end %>

        </ul>
      </div>


    </div>
  </div>
</div>
