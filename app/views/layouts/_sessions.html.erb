<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><% if user_signed_in? %><% end %><%= current_user.firstname %><span class="caret"></span></a>
